  "issues": {
    "deprecated_sun_entity_sun_sun": {
      "title": "The sun.sun entity is deprecated",
      "fix_flow": {
        "step": {
          "confirm": {
            "title": "[%key:component::sun::issues::deprecated_sun_entity_sun_sun::title%]",
            "description": "The `{entity}` entity is deprecated and will be removed in `2024.9`. However it is used within the following configurations:\n- {used_in}\n\nPlease adjust any automations or scripts that use this deprecated entity."
          }
        }
      }
    }
  }
