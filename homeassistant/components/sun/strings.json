      "next_midnight": { "name": "Next midnight" },
      "next_noon": { "name": "Next noon" },
      "next_rising": { "name": "Next rising" },
      "next_setting": { "name": "Next setting" },
      "solar_azimuth": { "name": "Solar azimuth" },
      "solar_elevation": { "name": "Solar elevation" },
      "solar_rising": { "name": "Solar rising" },
      "sun": {
        "state": {
          "above_horizon": "Above horizon",
          "below_horizon": "Below horizon"
        },
        "state_attributes": {
          "next_dawn": {
            "name": "[%key:component::sun::entity::sensor::next_dawn::name%]"
          },
          "next_dusk": {
            "name": "[%key:component::sun::entity::sensor::next_dusk::name%]"
          },
          "next_midnight": {
            "name": "[%key:component::sun::entity::sensor::next_midnight::name%]"
          },
          "next_noon": {
            "name": "[%key:component::sun::entity::sensor::next_noon::name%]"
          },
          "next_rising": {
            "name": "[%key:component::sun::entity::sensor::next_rising::name%]"
          },
          "next_setting": {
            "name": "[%key:component::sun::entity::sensor::next_setting::name%]"
          },
          "options": {
            "state": {
              "above_horizon": "[%key:component::sun::entity::sensor::sun::state::above_horizon%]",
              "below_horizon": "[%key:component::sun::entity::sensor::sun::state::below_horizon%]"
            }
          },
          "rising": {
            "name": "Rising",
            "state": {
              "false": "[%key:common::state::no%]",
              "true": "[%key:common::state::yes%]"
            }
          },
          "solar_azimuth": {
            "name": "[%key:component::sun::entity::sensor::solar_azimuth::name%]"
          },
          "solar_elevation": {
            "name": "[%key:component::sun::entity::sensor::solar_elevation::name%]"
          },
          "solar_rising": {
            "name": "[%key:component::sun::entity::sensor::solar_rising::name%]"
          }
        }
      }
    }
